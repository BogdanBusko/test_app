= form_for @title do |f|
  - if @title.errors.any?
    #error_explanation
      %h2= "#{pluralize(@title.errors.count, "error")} prohibited this title from being saved:"
      %ul
        - @title.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
